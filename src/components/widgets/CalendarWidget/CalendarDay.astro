---
import CalendarEvent from './CalendarEvent.astro'
interface Event {
  title: string
  startTime: string
  endTime: string
  location?: string
  color?: string
  allDay?: boolean
}

interface Props {
  dayLabel: string
  dayNumber: number
  month: string
  events: Event[]
}

const { dayLabel, dayNumber, month, events } = Astro.props
---

<div class="flex gap-4 mb-6 items-center">
  <!-- Left side: Date information -->
  <div
    class="flex flex-col items-center justify-center min-w-[80px] text-center"
  >
    <span class="text-sm font-medium text-base-content/70 uppercase"
      >{dayLabel}</span
    >
    <span class="text-4xl font-bold text-base-content">{dayNumber}</span>
    <span class="text-sm font-medium text-base-content/70 uppercase"
      >{month}</span
    >
  </div>

  <!-- Right side: Events list -->
  <div class="flex-1 min-w-0 space-y-1">
    {
      events.map((event) => (
        <CalendarEvent
          title={event.title}
          startTime={event.startTime}
          endTime={event.endTime}
          location={event.location}
          color={event.color}
          allDay={event.allDay}
        />
      ))
    }
  </div>
</div>
